section.short_notification {
	float:left;
}
section .short_notification ul{
	list-style:none;
	margin:5px auto;
}

section .short_notification ul li {
	list-style:none;
	margin:2px;
}

section .short_notification ul li div.underline{
	width:100%;
	height:auto;
	margin:5px 0px;
	
}

li:hover div.underline{
	border:1px solid #3FF;
	
}

section .short_notification ul li sender{
	font-style:italic;
}



a{
	text-decoration:none;
	color:#39C;
}
a:hover{
	color:#3FF;
	
}

input[type=submit]{
	margin:10px 0px 10px 2px;
	color:red;
	background-color:black;
}

