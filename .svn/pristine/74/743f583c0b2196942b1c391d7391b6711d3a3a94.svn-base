/* menu: duoc viet trong file cssmenu */

#notice {
	float:right;
	height:52px;
	width:30%;
	background-color:#372E28;
}
#notice span {
	font-weight:bold;
	color:red;
	padding:16px 5px;
	float:right;
	cursor:pointer;
}

#notice img {
	float:right;
	margin:16px 5px;
}

#notice:hover span {
	color:black;
}
#frame_thongbao {
	width:47%;
	display:none;
	height:70%;
	border-radius:10px;
	background:#FFFFFF;
	z-index: 98;
	position: absolute;
	top: 20%;
	right:7%;
	border:4px solid #5E5E5E;
}

#frame_thongbao div:first-child {
	float:right;
	width:100%;
}
#frame_thongbao div:first-child  input{
	float:right;
}
#frame_thongbao div.dsthongbao{
	height: 91%;
	width:100%;
	
	float:right;
}


#frame_thongbao div.dsthongbao iframe{
	height:100%;
	width:100%;
}
iframe.arrow_box {
	
	background: #88b7d5;
	border: 4px solid #c2e1f5;
}
iframe.arrow_box:after, .arrow_box:before {
	bottom: 100%;
	left: 50%;
	border: solid transparent;
	content: " ";
	height: 0;
	width: 0;
	position: absolute;
	pointer-events: none;
}

iframe.arrow_box:after {
	border-color: rgba(136, 183, 213, 0);
	border-bottom-color: #88b7d5;
	border-width: 20px;
	margin-left: -20px;
}
iframe.arrow_box:before {
	border-color: rgba(194, 225, 245, 0);
	border-bottom-color: #c2e1f5;
	border-width: 26px;
	margin-left: -26px;
}

