#tips {
	display:none;
	position: absolute;
top: 124px;
right: 298px;
width: 223px;
padding: 7px;
background: white;
border: 1px solid red;
border-radius: 4px;
}

.error {
	color:red;
	font-style:italic;
}

a span.tieude {
	color: blue;
font-weight: bold;
text-decoration: none !important;
cursor: default;
}

table.tomtat tr:hover td{
	background: aliceblue;
	cursor:pointer;
}
table.chitiet {
	border: 2px solid #999;
	background: aliceblue;
}
table.chitiet tr{
	display:none;
}


table.chitiet tr td,table.chitiet tr th{
	padding:5px;
	vertical-align:top;
}
table.chitiet tr:nth-child(even) td{
	height:250px;
}

.tieude-tb {
	color:#006;
	width: 102px;
	font-weight: bold;
}

p.pp{
	border-bottom: 1px solid #CCC;
	padding-top: 5px;
	padding-bottom: 5px;
}


table.chitiet tr:first-child, table.chitiet tr:nth-child(2){
	display:block;
}

.form h1 {
	width:110%;
}

img.close{
	width:30px;
	height:30px;
	padding:5px;
	position:absolute;
	top: 25%;
	right: 111px;
	opacity: 1;
}



