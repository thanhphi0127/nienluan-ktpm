/* CSS Document */
.mon {
	border: 1px solid #CCC;
	color: #000;
	width: 582px;
	border-radius: 3px;
	float:left;
	margin: 10px;
	padding: 5px;
	margin-right: 0px;
}

.mon table th {
	background-color: #2969A9;
	color:#FFF;
}
.mon img{
	width: 80px;
	height: 80px;
	float: left;
}
.mon h4 {
	margin-top: 40px;
}

.congviec {
	float:right;
	min-width: 450px;
	min-height: 200px;
	border: 1px solid #CCC;
	border-radius: 3px;
	margin: 10px;
	padding: 5px;
	color: #000;
	width: 550px;
	margin-left: 0px;
}

.khung table{
	width: 520px;
	min-width: 500px;
}

.tong_mh{
	margin: 8px;
}

.khung.mon {
	display:inline;
}

.khung.congviec {
	display:inline;
	
}

body {
	font-size: 10pt;
}

.khung {
	min-height: 300px;
}

.table_nguoidung {
	min-width: 500px;
}

.khung > congviec > table{
	min-width: 500px;

}

.head_congviec {
	font-size:14px;
}

table tr th {
	font-size: 10pt;
}