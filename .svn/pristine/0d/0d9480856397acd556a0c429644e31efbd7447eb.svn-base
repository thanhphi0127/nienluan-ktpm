.widthPanel {
    max-width: 100%;
    height: 0%;
}

.inputSearch {
    width: 200px;
}

.add_Topic {
    display: none;
}

#modify_Topic {
    display: none;
}

div.error {
    color: red;
    
}

#delete_Topic {
	display: none;
}

input.modify, .delete {
	width: 25px;
	height: 23px;
}

.content {
	padding: 30px;
}

.posting{
	overflow: auto;
	max-width: 100%;
}

h3 {
	margin-top:0px;
	margin-bottom: 0px;
}

div input {
	margin-right: 10px;
}

hr {
	margin-top: 5px;
	margin-bottom: 0px;
}

.comment {
	background-color: #fafafa; 
	padding-top: 5px;
}

.img {
	width: 100px; 
	height: 80px;
	margin-left: 50px;
}

.thongtin {
	background-color: #f0f7fc;
	border: 1px solid #d5d5d5;
	border-radius: 0;
	position: relative;
}

.thongtin avatar {
	background-color: #FFF;
	padding: 10px;
	border-bottom-left-radius: 0;
	text-align: center;
	position: relative;
}

thongtin h3.userText {
	background-color: #f0f7fc;
	padding: 10px;
	border: 0 solid #d5d5d5;
	border-top-width: 1px;
}

.arrow {
	position: absolute;
	top: 10px;
	right: -10px;
	display: block;
	width: 0px;
	height: 0px;
	line-height: 0px;
	border: 10px solid transparent;
	border-left-color: #d5d5d5;
	border-right: none;
}