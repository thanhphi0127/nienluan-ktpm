}

body {
		margin: 0px;
		padding: 0;
		font-family: "Lucida Grande",Helvetica,Arial,Verdana,sans-serif;
		font-family: "Time New Roman",Helvetica,Arial,Verdana,sans-serif;
		font-size: 14px;
		background-color: #EFF8FF;
		background-repeat:repeat;
		
}

