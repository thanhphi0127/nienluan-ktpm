/* -------------------------------Footer------------------------------- */
footer {
	text-align:center;
	padding: 5px;
	border-top: 5px solid #999;
	width: 100%;
	height: 66px;
	//margin:10px 6.5%;
	margin: 10px 0px 20px 0px;
	float:left;
	background-color:#FBFFFF;
	border-top: 1px dashed #999999;/* them6 vao2*/
	border-bottom: 1px dashed #999999;
	color:#000;
	font-size:12px;
}


footer p {
	font-weight:bold;
	color:#000;
	//border-top: 1px dashed #999999;
	margin:auto 0px 0px;
	
}

