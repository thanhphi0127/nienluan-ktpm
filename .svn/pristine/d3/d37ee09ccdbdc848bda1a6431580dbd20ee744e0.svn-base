	margin-bottom:0px;
}
#bar img {
	float: left;
margin: -15px 7px 0px 0px;
width: 42px;
height: auto;
}

#menu {
	float:left;
}
/* menu: duoc viet trong file cssmenu */


#frame_thongbao {
	width:55%;
	display:none;
	height:75%;
	border-radius:10px;
	background:#FFFFFF;
	z-index: 98;
	position: absolute;
	top: 20%;
	right:7%;
	
}

#frame_thongbao div:first-child {
	float:right;
	width:100%;
}
#frame_thongbao div:first-child  input{
	float:right;
}
#frame_thongbao div.dsthongbao{
	height: 91%;
	width:100%;
	border: 4px solid skyblue;
	float:right;
}


#frame_thongbao div.dsthongbao iframe{
	height:100%;
	width:100%;
	border: none;
}




