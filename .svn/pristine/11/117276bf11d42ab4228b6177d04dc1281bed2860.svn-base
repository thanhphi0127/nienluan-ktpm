
header.quanly{
	
	padding:5px;
	
	/*border-bottom:5px solid #025A83;*/
	background:white;
	text-align:center;
	margin-bottom: 9px; 
	color:#C00;
	font-weight:bold;
	font-size:20pt;
	vertical-align:middle;
	
}
header.quanly img {
	margin:5px;
}
header.quanly span {
	font-weight:bold;
	margin:3px 0px;
	font-size:20px;
}

header.tab {
	margin:0px 0px 25px 0px;
	background:#FFF;
	height:220px;
	float:left;
	width:100%;
	padding:auto 10px;
	font-family:tahoma;
	
}

	
header.tab fieldset {
	width: 400px;
/*border-radius: 20px; */
border:none;
height: 115px;
margin: 2% 6%;
float:left;
}

header.tab fieldset legend {
	text-transform:uppercase;
	font-weight:bold;
} 

header.tab ul {
	float:left;
	list-style:none;
	font-weight:13px;
	line-height:30px;
	margin:15px -5px 0px 0px;
	list-style:none;
	padding:0px;
}

header.tab ul li{
	padding:auto 10px;
	display:inline;
	margin:0px 10px;
}

header.tab ul li a {
}

nav.menu_quanly {
	border:1px solid #D1D1D1;
	border-top:none;
	float:left;
	width:100%;
}

nav.menu_quanly ul.main {
	margin:0px;
	padding:0px;
	list-style:none;
}

nav.menu_quanly ul.main li.main {
	float:left;
	border-right:1px solid #D1D1D1;
	position:relative;
}

nav.menu_quanly ul.main li.main a.main{
	height:30px;
	line-height:30px;
	float:left;
	color:#0A72A6;
	padding:3px 10px;
	font-weight:black;
}

nav.menu_quanly ul.main li.main-active a.main,
nav.menu_quanly ul.main li.main:hover a.main{
	color:blue;
}
nav.menu_quanly ul.main li.main:hover ul.item{
	display:block;
}
nav.menu_quanly ul.item {
	margin:0px;
	padding:0px;
	list-style:none;
	display:none;
	position:absolute;
	left:3px;
	top:30px;
	z-index:999;
	background-color:white;
	border:1px solid #066DA1;
	width:220px;
	
}

nav.menu_quanly ul.item:before{
	content:'';
	display:inline-block;	
	border-left:7px solid transparent;
	border-right:7px solid transparent;
	border-bottom-color:#066DA1;
	position:absolute;
	top:-7px;
	left:9px;
}
nav.menu_quanly ul.item:after{
	content:'';
	display:inline-block;	
	border-left:6px solid transparent;
	border-right:6px solid transparent;
	border-bottom:6px solid #ffffff;
	position:absolute;
	top:-6px;
	left:10px;
}
nav.menu_quanly ul.item li.item {	
	padding:10px;
}

nav.menu_quanly ul.item li.item a.item{
	padding:3px 10px;
}
