@import "manipulation.css";
@import "../common_header.css";
/*-------------------------------------Genarally--------------------------------------------*/
a {
	text-decoration:none;
}
a:hover {
	text-decoration:underline;
	color:blue;
}


/*------------------------------------------------------------------------------------------*/
section.group_info {
	border: 1px solid #D1D1D1;
	min-height: 368px;
	margin: 0px 0px 5px 0px;
	overflow: hidden;
	background: #F4F4F4;
	padding: 10px;
}

	


#tab_subject {
	margin:36px auto 0px;
	
}

#tab_subject  tr td, #tab_subject tr th{
	padding:10px;
	border:1px solid gray;
	cursor:pointer;
}
#tab_subject tr th{
	background-color:gray;
}
#tab_subject tr td:nth-child(1) {
	background-color:yellow;
}
#tab_subject tr td:nth-child(2) {
	background-color:pink;
}

#group_detail {
	color: black;
	text-align: center;
	padding:0px 30px;
	width: 50%;
	display: none;
	float:left;
	margin:0px 0px 0px 0px;
}

#group_detail p {
	text-align:left;
}
#group_detail  label {
	margin-top:-13px;
	text-align:left;
}

#group_detail label span{
	float:left;
	margin-right:10px;
	font-weight:bold;
	font-size:14px;
}

subtitle {
	
	font-weight:bold;
	font-size:20px;
}


#group_detail table {
	margin-left:auto;
	margin-right:auto;
	margin-top:10px;
	text-align:left;
}

#group_detail table th{
	background-color:gray;
}

#group_detail table tr td{
	padding:5px;
	border:1px solid #333;
}

#group_detail table tr td:nth-child(1){
	text-align:center;
}

/* register */
#register {
	display:none;
}

#iframe_login  {
	width:100%;
	height:90%;
	position:absolute;
	left:0;
	top:0;
	z-index:1999;
	background-color:white;
	
}

#iframe_login div.verify {
	width:100%;
	height:100%;
	margin:0px;
}

#iframe_login div.iframe_login_up {
	background:#FFF;
	border-bottom:5px solid #0080FF;
	text-align:center;
	width:100%;
	height:50px;
	margin:-40px 0px 0px 0px;
}

#iframe_login div.iframe_login_up  img{
	margin:2px auto;
}

#register, #addmember, #iframe_login , section.manipulation{
	display:none;
}

.khung{
	border-radius: 5px;
	padding: 5px; 
	margin: auto;
	width: 87%;
