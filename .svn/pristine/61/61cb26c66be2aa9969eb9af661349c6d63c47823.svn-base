			if ('Tất cả' == TEN_HK) {
				$('table#example1 > tbody > tr').show(100);
			}
			else {
				$('table#example1 > tbody > tr > td:contains('+ TEN_HK +')').parent().show(100);
			}	
		});
		
            	
		
    });
	
</script>

