/* CSS Document */
.mon {
	border: 1px solid #CCC;
	color: #000;
	width: 480px;
	border-radius: 3px;
	float:left;
	margin: 10px;
	padding: 5px;
	margin-right: 0px;
	background:#FFF;
}

.mon table th {
	background-color: #2969A9;
	color:#FFF;
}
.mon img{
	width: 80px;
	height: 80px;
	float: left;
}
.mon h4 {
	margin-top: 40px;
	font-weight:bold;
	color:blue;
}

.congviec {
	height: 260px;
	float:right;
	background:#FFF;
	min-width: 450px;
	min-height: 200px;
	border: 1px solid #CCC;
	border-radius: 3px;
	margin: 10px;
	padding: 5px;
	color: #000;
	width: 550px;
	margin-left: 0px;
}

.khung table{
	margin: 0px 0px 0px 0px;
	width: 469px;
	min-width: 463px;
}

#table1 {
	width: 450px;
	margin: 19px 64px 0px 64px;
}

.tong_mh{
	margin: 8px 0px 8px 27px;
}

.khung.mon {
	display:inline;
}

.khung.congviec {
	display:inline;
	
}

body {
	font-size: 10pt;
}

.khung {
